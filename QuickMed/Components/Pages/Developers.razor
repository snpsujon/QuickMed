@page "/developers"


<div class="container my-2">
    <!-- Header Section -->
    <header class="text-center py-5 bg-primary text-white rounded shadow">
        <h1 class="display-3">TechStdio </h1>
        <p class="lead">Innovating Solutions for a Better Tomorrow</p>
    </header>

    <!-- About Section -->
    <section id="about" class="py-5">
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="https://via.placeholder.com/600x400" class="img-fluid rounded shadow" alt="About Us">
            </div>
            <div class="col-md-6">
                <h2 class="text-primary">About Us</h2>
                <p class="text-muted">
                    At <strong>TechStdio</strong>, we specialize in delivering top-notch software solutions tailored to meet the unique needs of our clients.
                    Our journey began in 2010, and since then, we have been at the forefront of web, mobile, and cloud development.
                </p>
                <p class="text-muted">
                    Our mission is to empower businesses by offering scalable, innovative, and cutting-edge digital solutions that drive growth.
                </p>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-5 bg-light rounded shadow">
        <h2 class="text-center text-primary mb-4">Our Services</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <i class="bi bi-code-slash display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Web Development</h5>
                        <p class="card-text">Crafting responsive, high-performance websites to enhance your digital presence.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <i class="bi bi-phone display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Mobile App Development</h5>
                        <p class="card-text">Building user-friendly mobile apps to connect with customers anytime, anywhere.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <i class="bi bi-cloud-arrow-up display-4 text-primary mb-3"></i>
                        <h5 class="card-title">Cloud Solutions</h5>
                        <p class="card-text">Providing scalable and secure cloud-based services for your growing business needs.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Info Section -->
    <section id="contact" class="py-5">
        <div class="text-center">
            <h2 class="text-primary">Get in Touch</h2>
            <p class="lead text-muted mb-4">We’d love to hear from you. Reach out to us today!</p>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow border-0 text-center p-4">
                    <h4 class="text-primary">Contact Info</h4>
                    <p class="text-muted"><i class="bi bi-envelope-fill text-primary"></i> Email: contact@techdtdio.com</p>
                    <p class="text-muted"><i class="bi bi-telephone-fill text-primary"></i> Phone: +1 234 567 890</p>
                    <p class="text-muted"><i class="bi bi-geo-alt-fill text-primary"></i> Address: 1234 Street Name, City, Country</p>
                </div>
            </div>
        </div>
    </section>
</div>

@* Include Bootstrap JS *@