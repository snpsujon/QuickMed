@page "/drugTemp"
@using QuickMed.BaseComponent
@using QuickMed.DB
@inherits BaseAdvice

<h4 class="text-success"> <i class="dripicons-document"></i> &nbsp;&nbsp;  Drug / Favourite Form</h4>
<div class="col-lg-12">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row mb-2">
                        <div class="col-sm-12 d-flex">
                            <label for="example-text-input" class="col-sm-1 form-label  mb-lg-0">Template Name</label>
                            <div class="col-sm-4">
                                <input class="form-control form-control-sm" type="text" value="" id="example-text-input">
                            </div>

                        </div>
                    </div>
                </div>
                <!--end card-header-->
                <div class="card-body">
                    <!-- <button class="btn  btn-primary btn-sm mb-3" id="submit_data">Submit</button> -->
                    <div class="table-responsive">
                        <table class="table  table-bordered table-sm" id="makeEditable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Brand</th>
                                    <th>Dose</th>
                                    <th>Instruction</th>
                                    <th>Duration</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Tab. Napa Extend</td>
                                    <td>1 + 0 + 1</td>
                                    <td>খাবার পরে</td>
                                    <td>৩ মাস</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <span class="float-right">
                        <button id="but_add" class="btn btn-primary btn-sm">Add New Row</button>
                    </span><!--end table-->


                    <hr />
                    <span class="float-right">
                        <button id="but_add" class="btn btn-success btn-sm float-end">Save</button>
                    </span>

                </div><!--end card-body-->
            </div><!--end card-->
        </div> <!-- end col -->


    </div> <!-- end row -->


</div><!--end col-->


<h4 class="text-primary"> <i class="dripicons-view-list"></i> &nbsp;&nbsp;  Drug / Favourite List</h4>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="datatable-doseTemp" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th class="border-top-0">Name</th>
                            <th class="border-top-0 text-end">Action</th>
                        </tr>
                    </thead>


                    <tbody>
                        <tr>
                            <td>2C</td>
                            <td class="text-end"> <i class="dripicons-pencil btn btn-soft-primary"></i><i class="dripicons-trash btn btn-soft-danger"></i></td>
                        </tr><!--end tr-->

                        <tr>
                            <td>2C</td>
                            <td class="text-end"> <i class="dripicons-pencil btn btn-soft-primary"></i><i class="dripicons-trash btn btn-soft-danger"></i></td>
                        </tr><!--end tr-->

                        <tr>
                            <td>2C</td>
                            <td class="text-end"> <i class="dripicons-pencil btn btn-soft-primary"></i><i class="dripicons-trash btn btn-soft-danger"></i></td>
                        </tr><!--end tr-->

                        <tr>
                            <td>2C</td>
                            <td class="text-end"> <i class="dripicons-pencil btn btn-soft-primary"></i><i class="dripicons-trash btn btn-soft-danger"></i></td>
                        </tr><!--end tr-->



                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
@code {
    @code {
        protected override async Task OnAfterRenderAsync(bool firstRender)
        {
            if (firstRender)
            {
                await JS.InvokeVoidAsync("makeDataTable", "datatable-doseTemp");
            }
        }
    }
}