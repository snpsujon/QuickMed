@page "/drugTemp"
@using QuickMed.BaseComponent
@using QuickMed.DB
@inherits BaseAdvice

@*<h4 class="text-success"> <i class="dripicons-document"></i> &nbsp;&nbsp;  Drug / Favourite Form</h4>*@
<div class="col-lg-12">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning ">
                    <h4 class="card-title text-light"> <i class="dripicons-information"></i> &nbsp;&nbsp;Drug / Favourite Form</h4>
                </div><!--end card-header-->
                <div class="card-header bg-light">
                    <div class="row mb-2  py-3">
                        <div class="col-sm-12 d-flex">
                            <label for="example-text-input" class="col-sm-1 form-label  mb-lg-0 me-3 fw-bold">Template Name  </label>
                            <div class="col-sm-4">
                                <input class="form-control form-control-sm border-dark" type="text" id="TempName">
                            </div>

                        </div>
                    </div>
                    <hr style="border-top: 1px dashed #f1f5fa;" />
                    <div class="row">
                        <div class="col-sm-3">
                            <select class="select2 form-control mb-3 custom-select" id="brandSelect" aria-label="Default select example" style="appearance: none;">
                                <option selected value="0" disabled>Select Brand</option>

                            </select>
                        </div>
                        <div class="col-sm-3">
                            <select class="select2 form-control mb-3 custom-select" id="doseSelect" aria-label="Default select example">
                                <option selected value="0" disabled>Select Dose</option>

                            </select>
                        </div>
                        <div class="col-sm-3">
                            <select class="select2 form-control mb-3 custom-select" id="instructionSelect" aria-label="Default select example">
                                <option selected value="0" disabled>Select Instruction</option>

                            </select>
                        </div>
                        <div class="col-sm-2">
                            <select class="select2 form-control mb-3 custom-select" id="durationSelect" aria-label="Default select example">
                                <option selected value="0" disabled>Select Duration</option>

                            </select>
                        </div>

                        <div class="col-sm-1 text-end">
                            <button class="btn btn-success btn-sm" title="Add"><i class="fas fa-plus"></i></button>

                        </div>
                    </div>
                </div>
                <!--end card-header-->
                <div class="card-body">
                    <span class="float-right">
                        <button id="but_add" class="btn btn-success btn-sm float-end">Save</button>
                    </span>

                </div><!--end card-body-->
            </div><!--end card-->
        </div> <!-- end col -->


    </div> <!-- end row -->


</div><!--end col-->


@*<h4 class="text-primary"> <i class="dripicons-view-list"></i> &nbsp;&nbsp;  Drug / Favourite List</h4>*@
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-warning ">
                <h4 class="card-title text-light"> <i class="dripicons-view-list"></i> &nbsp;&nbsp;Drug / Favourite List</h4>
            </div><!--end card-header-->
            <div class="card-body">
                <table id="datatable-doseTemp" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th class="border-top-0">Name</th>
                            <th class="border-top-0 text-end">Action</th>
                        </tr>
                    </thead>


                    <tbody>
                        <tr>
                            <td>2C</td>
                            <td class="text-end"> <i class="dripicons-pencil btn btn-soft-primary"></i><i class="dripicons-trash btn btn-soft-danger"></i></td>
                        </tr><!--end tr-->

                        <tr>
                            <td>2C</td>
                            <td class="text-end"> <i class="dripicons-pencil btn btn-soft-primary"></i><i class="dripicons-trash btn btn-soft-danger"></i></td>
                        </tr><!--end tr-->

                        <tr>
                            <td>2C</td>
                            <td class="text-end"> <i class="dripicons-pencil btn btn-soft-primary"></i><i class="dripicons-trash btn btn-soft-danger"></i></td>
                        </tr><!--end tr-->

                        <tr>
                            <td>2C</td>
                            <td class="text-end"> <i class="dripicons-pencil btn btn-soft-primary"></i><i class="dripicons-trash btn btn-soft-danger"></i></td>
                        </tr><!--end tr-->



                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
@code {
    @code {
        protected override async Task OnAfterRenderAsync(bool firstRender)
        {
            if (firstRender)
            {
                await JS.InvokeVoidAsync("makeDataTable", "datatable-doseTemp");
            }
        }
    }
}