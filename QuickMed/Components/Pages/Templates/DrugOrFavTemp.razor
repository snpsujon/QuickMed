@page "/drugTemp"
@using QuickMed.BaseComponent
@inherits BaseFavouriteDrugTemp

@*<h4 class="text-success"> <i class="dripicons-document"></i> &nbsp;&nbsp;  Drug / Favourite Form</h4>*@
<div class="col-lg-12">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning ">
                    <h4 class="card-title text-light"> <i class="dripicons-information"></i> &nbsp;&nbsp;Drug / Favourite Form</h4>
                </div><!--end card-header-->
                <div class="card-header bg-light">
                    <div class="row mb-2  py-3">
                        <div class="col-sm-12 d-flex">
                            <label for="example-text-input" class="col-sm-1 form-label  mb-lg-0 me-3 fw-bold">Template Name  </label>
                            <div class="col-sm-4">
                                <input class="form-control form-control-sm border-dark" type="text" id="TempName">
                            </div>

                        </div>
                    </div>
                    <hr style="border-top: 1px dashed #f1f5fa;" />
                    <div class="row">
                        <div class="col-sm-3">
                            <select class="select2C form-control mb-3 custom-select" id="brandSelect" aria-label="Default select example" style="appearance: none;">
                                <option selected value="0" disabled>Select Brand</option>
                                @foreach (var item in Brands)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-3">
                            <select class="select2W form-control mb-3 custom-select" id="doseSelect" aria-label="Default select example">
                                <option selected value="0" disabled>Select Dose</option>
                                @foreach (var item in Dose)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-3">
                            <select class="select2W form-control mb-3 custom-select" id="instructionSelect" aria-label="Default select example">
                                <option selected value="0" disabled>Select Instruction</option>
                                @foreach (var item in Instructions)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <select class="select2W  form-control custom-select" aria-label="Default select example" id="durationSelectfav">
                                <option selected disabled>Select Duration</option>
                                @if (Duration != null && Duration.Any())
                                {
                                    @foreach (var item in Duration)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }

                                }
                            </select>

                        </div>

                        <div class="col-sm-1 text-end">
                            <button class="btn btn-success btn-sm" @onclick="OsudAddbtn" title="Add"><i class="fas fa-plus"></i></button>

                        </div>
                    </div>
                </div>
                <!--end card-header-->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table  table-bordered table-sm" id="drugTmp">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Brand</th>
                                    <th>Dose</th>
                                    <th>Instruction</th>
                                    <th>Duration</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="5" class="text-center text-blue">No data Available</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <span class="float-right">
                        <button id="but_add" class="btn btn-success btn-sm float-end">Save</button>
                    </span>

                </div><!--end card-body-->
            </div><!--end card-->
        </div> <!-- end col -->


    </div> <!-- end row -->


</div><!--end col-->


