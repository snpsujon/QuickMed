@page "/durationTemp"
@using QuickMed.BaseComponent
@inherits BaseDurationTemp

@*<h4 class="text-success"> <i class="dripicons-document"></i> &nbsp;&nbsp;  D/X Form</h4>*@
<div class="col-lg-12">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning ">
                    <h4 class="card-title text-light"> <i class="dripicons-information"></i> &nbsp;&nbsp;Duration Form</h4>
                </div><!--end card-header-->
                <!--end card-header-->
                <div class="card-body">
                    <!-- <button class="btn  btn-primary btn-sm mb-3" id="submit_data">Submit</button> -->
                    <div class="mb-3 row">
                        <label for="example-text-input" class="col-sm-1 form-label align-self-center mb-lg-0 text-end">Name</label>
                        <div class="col-sm-5">
                            <input class="form-control form-control-sm" type="text" @bind-value="model.Name"/>
                        </div>
                    </div>
                    <hr />
                    <span class="float-right">
                        <button id="but_add" class="btn btn-success btn-sm float-end" @onclick="OnSaveBtnClick">Save</button>
                    </span>

                </div><!--end card-body-->
            </div><!--end card-->
        </div> <!-- end col -->


    </div> <!-- end row -->


</div><!--end col-->


@*<h4 class="text-primary"> <i class="dripicons-view-list"></i> &nbsp;&nbsp;  D/X List</h4>*@
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-warning ">
                <h4 class="card-title text-light"> <i class="dripicons-view-list"></i> &nbsp;&nbsp;Duration List</h4>
            </div><!--end card-header-->
            <div class="card-body">
                <table id="datatable-dxTemp" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th class="border-top-0">#</th>
                            <th class="border-top-0">Name</th>
                            <th class="border-top-0 text-end">Action</th>
                        </tr>
                    </thead>


                    <tbody>
                        @if (models != null && models.Any())
                        {
                            @foreach (var item in models.Select((value, index) => new { value, index }))
                            {
                                <tr>
                                    <td>@(item.index + 1)</td> <!-- Display serial number (index + 1) -->
                                    <td>@item.value.Name</td>


                                    <td class="text-end">
                                        <span class="text-primary mx-1 cursor-pointer" @onclick="() => OnEditClick(item.value)"><i class="dripicons-pencil"></i></span>
                                        <span class="text-danger mx-1 cursor-pointer" @onclick="() => OnDeleteClick(item.value.Id)"><i class="dripicons-trash"></i></span>
                                    </td>


                                </tr>
                            }


                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->