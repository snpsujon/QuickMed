@page "/ixTemp"
@using QuickMed.BaseComponent
@inherits BaseIXTemp

<div class="col-lg-12">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info d-flex justify-content-between">
                    <div>
                        <h4 class="card-title  text-light">
                            <i class="dripicons-information"></i>&nbsp;&nbsp;Investigation Template Form
                        </h4>
                    </div>
                    <div>
